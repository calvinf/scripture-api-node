{
    "extends": "@tsconfig/node12/tsconfig.json",
    "compilerOptions": {
        "module": "ES2015",
        "baseUrl": ".",
        "outDir": "./lib/",
        "rootDir": "./src/",
        "paths": {
            "~/*": ["src/*"],
        },
        "moduleResolution": "node",
        "sourceMap": true
    },
    "exclude": [
        "**/__tests__",
        "node_modules",
        "**/*.spec.ts",
        "**/*.test.ts"
    ]
}
